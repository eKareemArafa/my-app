<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/coordinate"
    android:background="@color/backg"
    tools:context="com.example.merna.graduation_project.setting">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:title="Setting"
            android:paddingLeft="10dp"

            app:navigationIcon="?attr/homeAsUpIndicator"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backg"
    android:id="@+id/parent_linear_layout"

    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
android:layout_marginTop="10dp"
    >



    <TextView

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Upload to Drive"
    android:textSize="@dimen/titlesize"
        android:textColor="@color/title"
        android:id="@+id/tvupload"

    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your photo,file and document will be upload to drive to be in save if your phone lost "
        android:layout_below="@id/tvupload"
        android:textSize="@dimen/textsize"
        android:textColor="@color/text"
        android:paddingTop="@dimen/paddingRight"
        android:id="@+id/textView2"
        />


<Switch
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:paddingRight="@dimen/paddingRight"
    android:textOff=""
    android:textOn=""
    android:id="@+id/switch_DriveUpdate"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#d6d6d6"
        android:id="@+id/view"
        android:layout_below="@id/textView2"
        android:layout_marginTop="@dimen/Mbtween"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textSize="@dimen/titlesize"
        android:layout_below="@id/view"
        android:id="@+id/tvchangepassword"
        android:textColor="@color/title"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:clickable="true"
        android:onClick="click"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/password"
    android:layout_below="@+id/tvchangepassword">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>





    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#d6d6d6"
        android:id="@+id/view1"
        android:layout_below="@id/password"
        android:layout_marginTop="@dimen/Mbtween"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change_Gmail"
        android:textSize="@dimen/titlesize"
        android:layout_below="@id/view1"
        android:id="@+id/tvchangeGmail"
        android:textColor="@color/title"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:clickable="true"
        android:onClick="gmail"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlGmail"
        android:layout_below="@+id/tvchangeGmail">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</RelativeLayout>
</LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>