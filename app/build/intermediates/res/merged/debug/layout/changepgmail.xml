<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backg">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/currentGmail"
        android:layout_marginLeft="20dp"
        android:background="@drawable/edittext"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter current Gmail "
        android:inputType="textPassword"/>

      <EditText

          android:layout_below="@id/currentGmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/eidtGmail"
          android:paddingLeft="20dp"
        android:inputType="textPassword"
        android:hint="Enter new  Gmail"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="20sp"
          android:layout_marginLeft="20dp"
          android:background="@drawable/edittext" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:background="@color/colorFloatBtn"
        android:textColor="@color/title"
        android:id="@+id/save"
        android:textSize="@dimen/textsize"
        android:textAllCaps="true"
        android:layout_marginTop="40dp"
        android:onClick="G_save"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/eidtGmail"/>
</RelativeLayout>
